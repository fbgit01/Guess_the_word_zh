/* prepare.wxss */
page {
  background: linear-gradient(135deg, #a6c1ee 0%, #fbc2eb 100%);
  min-height: 100vh;
}

.container {
  background-color: transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding-bottom: 60rpx;
}

.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background: linear-gradient(
    90deg,
    rgba(148, 72, 188, 0.6),
    rgba(124, 113, 242, 0.6)
  );
  backdrop-filter: blur(10px);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  padding-top: 30rpx; /* 适应状态栏 */
  box-sizing: border-box;
  z-index: 100;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.back-icon {
  color: white;
  font-weight: bold;
  font-size: 36rpx;
}

.navbar-title {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 2rpx;
}

.placeholder {
  width: 60rpx;
}

.title {
  color: white;
  font-size: 42rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  margin-top: 140rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.content-wrapper {
  width: 100%;
  max-width: 650rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.message {
  font-size: 32rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  width: 100%;
  text-align: center;
  color: #ff8c00;
  border-left: 10rpx solid #ffa500;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.settings-card {
  background-color: rgba(255, 255, 255, 0.85);
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  margin: 20rpx 0;
  width: 100%;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.settings-card::before {
  content: "";
  position: absolute;
  top: -10%;
  left: -10%;
  width: 120%;
  height: 30%;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.3),
    rgba(255, 255, 255, 0)
  );
  transform: rotate(-5deg);
  pointer-events: none;
}

.setting-item {
  margin-bottom: 30rpx;
  width: 100%;
}

.setting-label {
  font-size: 30rpx;
  color: #9448bc;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.setting-value {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.time-options {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20rpx;
  width: 100%;
}

.time-option {
  width: 23%;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.time-option:active {
  transform: scale(0.95);
}

.time-option.active {
  background: linear-gradient(
    135deg,
    rgba(148, 72, 188, 0.2),
    rgba(124, 113, 242, 0.2)
  );
  color: #9448bc;
  border: 2rpx solid rgba(148, 72, 188, 0.3);
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(124, 113, 242, 0.2);
  transform: scale(1.05);
}

.tips-card {
  background-color: rgba(255, 255, 255, 0.85);
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  margin: 20rpx 0 40rpx;
  width: 100%;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.tips-card::before {
  content: "";
  position: absolute;
  top: -10%;
  left: -10%;
  width: 120%;
  height: 30%;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.3),
    rgba(255, 255, 255, 0)
  );
  transform: rotate(-5deg);
  pointer-events: none;
}

.subtitle {
  color: #9448bc;
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(124, 113, 242, 0.2);
  padding-bottom: 15rpx;
  width: 100%;
}

.tips-content {
  font-size: 28rpx;
  color: #666;
  line-height: 2;
}

.btn-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}

.btn-container button {
  width: 100%;
  margin: 15rpx 0;
  border-radius: 60rpx;
  font-size: 36rpx;
  letter-spacing: 3rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  border: none;
  transition: all 0.3s ease;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
}

.btn-container button:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

.btn-primary {
  background: linear-gradient(45deg, #9448bc, #7c71f2);
  color: white;
  font-weight: bold;
  box-shadow: 0 10rpx 20rpx rgba(124, 113, 242, 0.5);
  border: 3rpx solid rgba(255, 255, 255, 0.4);
}

.btn-grey {
  background: rgba(255, 255, 255, 0.7);
  color: #9448bc;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 3rpx solid rgba(255, 255, 255, 0.6);
}

/* 倒计时样式 */
.countdown-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.countdown-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80%;
  animation: scaleIn 0.3s ease;
}

@keyframes scaleIn {
  from {
    transform: scale(0.9);
  }
  to {
    transform: scale(1);
  }
}

.countdown-title {
  font-size: 48rpx;
  color: white;
  margin-bottom: 40rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.countdown-number {
  font-size: 180rpx;
  font-weight: bold;
  color: #9448bc;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.95),
    rgba(255, 255, 255, 0.8)
  );
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40rpx 0;
  box-shadow: 0 0 40rpx rgba(148, 72, 188, 0.6);
  animation: pulse 1s infinite;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.countdown-tips {
  font-size: 32rpx;
  color: white;
  text-align: center;
  line-height: 1.6;
  margin-top: 40rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 0 30rpx rgba(148, 72, 188, 0.6);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 0 50rpx rgba(148, 72, 188, 0.8);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 0 30rpx rgba(148, 72, 188, 0.6);
  }
}
