/**app.wxss**/
page {
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica,
    Segoe UI, Arial, Roboto, "PingFang SC", "miui", "Hiragino Sans GB",
    "Microsoft Yahei", sans-serif;
  font-size: 32rpx;
  line-height: 1.6;
  background: #f8f8f8;
  color: #333;
  min-height: 100vh;
  box-sizing: border-box;
}

view,
text,
navigator,
button {
  box-sizing: border-box;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-around {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.flex-start {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.flex-end {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 全局渐变背景 */
.gradient-bg {
  background: linear-gradient(135deg, #a6c1ee 0%, #fbc2eb 100%);
}

.gradient-purple {
  background: linear-gradient(45deg, #9448bc, #7c71f2);
}

/* 全局按钮样式 */
.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 40rpx;
  border-radius: 60rpx;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  border: none;
}

.btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-primary {
  background: linear-gradient(45deg, #9448bc, #7c71f2);
  color: white;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(124, 113, 242, 0.4);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.7);
  color: #9448bc;
  font-weight: bold;
  border: 2rpx solid rgba(148, 72, 188, 0.3);
}

.btn-ghost {
  background: transparent;
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  box-shadow: none;
}

/* 全局卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  margin-bottom: 20rpx;
}

/* 状态栏适配 */
.status-bar {
  width: 100%;
  height: 25px;
  background-color: transparent;
}
